@model IEnumerable<BTVN_03.Models.SanPham>

<h2>Tìm kiếm sản phẩm</h2>
<form method="get" action="@Url.Action("TimKiem", "SanPham")" class="mb-3">
    <input type="text" name="keyword" value="@ViewBag.Keyword" placeholder="Nhập tên sản phẩm" class="form-control w-50 d-inline" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<h4>Kết quả tìm thấy: @ViewBag.Count sản phẩm</h4>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Hình</th>
            <th>Mã SP</th>
            <th>Tên SP</th>
            <th>Giá</th>
            <th>Mô tả</th>
            <th>Mã loại</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sp in Model)
        {
            <tr>
                <td><img src="~/images/@sp.DuongDan" width="80" height="50" /></td>
                <td>@sp.MaSP</td>
                <td>@sp.TenSP</td>
                <td>@string.Format("{0:N0} đ", sp.Gia)</td>
                <td>@sp.MoTa</td>
                <td>@sp.MaLoai</td>
            </tr>
        }
    </tbody>
</table>
