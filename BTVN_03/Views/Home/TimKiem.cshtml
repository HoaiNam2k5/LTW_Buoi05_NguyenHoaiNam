@model List<BTVN_03.Models.SanPham>
@{
    ViewBag.Title = "Kết quả tìm kiếm";
}

<div class="container mt-4">
    <h2>Kết quả tìm kiếm</h2>

    <!-- Form nhập từ khóa tìm kiếm -->
    @using (Html.BeginForm("TimKiem", "Home", FormMethod.Get))
    {
        <div class="input-group mb-3">
            <input type="text" name="keyword" class="form-control" placeholder="Nhập từ khóa..."
                   value="@ViewBag.Keyword" />
            <button class="btn btn-success" type="submit">Tìm</button>
        </div>
    }

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Mã SP</th>
                    <th>Tên SP</th>
                    <th>Hình ảnh</th>
                    <th>Giá</th>
                    <th>Mô tả</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sp in Model)
                {
                    <tr>
                        <td>@sp.MaSP</td>
                        <td>@sp.TenSP</td>
                        <td>
                            <img src="~/images/@sp.DuongDan" alt="@sp.TenSP" width="100" height="100" class="img-thumbnail" />
                        </td>
                        <td>@String.Format("{0:N0} ₫", sp.Gia)</td>
                        <td>@sp.MoTa</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">Không tìm thấy sản phẩm nào phù hợp.</p>
    }
</div>
